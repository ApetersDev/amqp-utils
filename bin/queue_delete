#!/usr/bin/ruby

require File.dirname(__FILE__) + '/../lib/amqp-utils/command'

class QueueDeleteCommand < Command
  def prepare_options(options)
    options.banner %Q{
    |Deletes the supplied queues.
    |
    |  queue_delete <queue>[, <another queue>, ...]
    }.margin
  end

  def execute
    @queues = ARGV
    def @queues.delete_or_stop
      queue = pop
      if queue
        puts "Deleteing #{queue}..."
        MQ.new.queue(queue).delete
        EM.next_tick { delete_or_stop }
      else
        AMQP.stop { EM.stop }
      end
    end

    EM.next_tick { @queues.delete_or_stop }
  end
end

QueueDeleteCommand.run
